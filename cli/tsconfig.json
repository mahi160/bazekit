{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "outDir": "build-ts"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
